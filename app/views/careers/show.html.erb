<body class="form-bg" style="background-image: url(<%= '/assets/card4.jpeg' %>); background-size : cover;">



<div class="container contact-form mb-4">
  <h1>Apply now for your dream job </h1>
  <hr>

  <div class="row">
    <div class="col-md-6">
      <address> Locations : Dubai/Kochi</address>
      <P>Send us your Resume <br> to:- info@rightsolutions.com</P>      
    </div>

    <div class="col-md-6">
<%= form_with(url: "/search", method: "get") do  %>

      <div class="form-group">
        <%= label_tag(:q , 'Name') %>
        <input id="q" name="q" type="text" class="form-control" />

      </div>

      <div class="form-group">
        <%= label_tag(:q , 'Degree') %>
        <input id="q" name="q" type="text" class="form-control" />

      </div>


      <div class="form-group">
        <%= label_tag(:q , 'Prefered Location') %> 
        <input id="q" name="q" type="text" class="form-control" />

      </div>

      <div class="form-group">
        <%= label_tag(:q , 'Experience') %> 
        <input id="q" name="q" type="text" class="form-control" />

      </div>

      

      <div class="form-group">
        <%= label_tag(:q , 'skills') %>
        <textarea  rows = 3 class="form-control" ></textarea>
      </div>


      <div class="form-group">
        <input id="q" name="q" type="file" />

      </div>

      <div class="form-group">
     <%= link_to 'Apply' , root_path  , class: 'btn btn-info btn-block' %>
     </div>

    </div>

  </div>
<% end %>
</div>

<%= render 'pages/footer' %>